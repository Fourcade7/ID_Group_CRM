<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:id="@+id/relativelay1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:background="@drawable/itembackground"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview1"
                android:layout_width="75dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:src="@drawable/idgroup"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"></de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageview1"
                android:layout_marginLeft="10dp"
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aminov Furqatbek"

                ></TextView>
            <TextView

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/11/2021"

                ></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>